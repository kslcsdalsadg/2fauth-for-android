<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/contents"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/account_pinned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_pinned"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/account_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/border_frame"
                    android:text="@string/new_account"
                    android:textColor="@color/border_frame_foreground"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/account_data_not_synced"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_account_not_synced"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/account_data_deleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_account_deleted"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textColor="?android:textColorPrimary"
                    style="@style/Base.TextAppearance.AppCompat.Title" />

            </LinearLayout>

            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:maxLines="1"
                android:textColor="?android:textColorSecondary"
                style="@style/Base.TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="20dp"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/border_frame_not_clickable"
                android:background="@drawable/border_frame_not_clickable"
                style="@style/Base.TextAppearance.AppCompat.Body2" />

            <LinearLayout
                android:id="@+id/otp_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/otp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="34sp"
                        style="@style/Base.TextAppearance.AppCompat.Headline" />

                    <TextView
                        android:id="@+id/otp_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/gray"
                        android:textSize="24sp"
                        style="@style/Base.TextAppearance.AppCompat.Headline" />

                </LinearLayout>

                <TextView
                    android:id="@+id/otp_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="?android:textColorSecondary"
                    style="@style/Base.TextAppearance.AppCompat.Headline" />

            </LinearLayout>

            <TextView
                android:id="@+id/otp_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/otp_error"
                android:textStyle="italic"
                style="@style/Base.TextAppearance.AppCompat.Caption" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>



